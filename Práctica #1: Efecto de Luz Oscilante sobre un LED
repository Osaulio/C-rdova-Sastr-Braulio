PROCESSOR 16F887
#include <xc.inc>
;CONFIG word1
CONFIG FOSC = INTRC_NOCLKOUT
CONFIG WDTE = OFF
CONFIG PWRTE = ON
CONFIG MCLRE = OFF
CONFIG CP = OFF
CONFIG CPD = OFF
CONFIG BOREN = OFF
CONFIG IESO = OFF
CONFIG FCMEN = ON
CONFIG DEBUG = ON
;CONFIG word2
CONFIG BOR4V=BOR40V
CONFIG WRT = OFF
PSECT udata
suspension1:
    DS 1
suspencion2:
    DS 1
suspencion3:
    DS 1
PSECT resetVec,class=CODE,delta=2
resetVec:
PAGESEL main
goto main
PSECT code
main:
BANKSEL ANSEL
CLRF ANSEL
BANKSEL TRISA
MOVLW 0b00000000
MOVWF TRISA
BANKSEL PORTA
CLRF PORTA
BANKSEL OSCCON
MOVLW  0b01110000
MOVWF  OSCCON
INICIO:
bcf STATUS,5
bcf STATUS,6
bcf STATUS,0
MOVLW  00000001B
MOVWF  PORTA
GOTO INCREMENTOIZQUIERDA
INCREMENTOIZQUIERDA:
RLF PORTA
BTFSS PORTA,7
GOTO INCREMENTOIZQUIERDA
GOTO INCREMENTODERECHA 
INCREMENTODERECHA:
RRF PORTA
BTFSS PORTA,0
GOTO INCREMENTODERECHA
GOTO INCREMENTOIZQUIERDA
END
